package hello_world;

class Piramida {
	private int num;

	public Piramida(int n) {
		num = n;
	}

	public void tiparire() {
		for (int i = num; i > 0; i--) {
			for (int j = 1; j <= num; j++) {
				System.out.print(i + " ");
			}
			System.out.println();
		}
	}
}

public class Trei4 {

	public static void main(String[] args) {
		Piramida pir = new Piramida(4);
		pir.tiparire();

	}

}
