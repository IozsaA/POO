package hello_world;

class Piramida {
	private int num;

	public Piramida(int n) {
		num = n;
	}

	public void tiparire() {
		for (int i = num; i >= 0; i--) {
			for (int j = i; j > 0; j--) {
				System.out.println(j + " ");
			}
			System.out.println();
		}
	}
}

